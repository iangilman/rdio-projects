#!/usr/bin/env python

def bail(message):
  print message
  quit()

try:
  from git import *
except ImportError:
  bail("Deployment Error: GitPython is not installed.")

repo = Repo('.')

if repo.is_dirty():
  bail("You have changes in your working directory.\nMake sure your repo is clean before deploying.")

print "check for gh-pages branch"

print "git checkout gh-pages"

print "merge master"

print "compile sass shit"

print "commit the pages repo"

print "push origin"

print "checkout master"

